
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
}
.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
}
/* 水平之间的距离设置最好用rpx做单位，垂直方向可以用px */
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}
.post-like{
  font-size: 26rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 40rpx;
}